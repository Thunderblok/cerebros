<div class="w-full min-h-screen bg-gray-50 p-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <.link navigate="/dashboard" class="flex items-center text-gray-600 hover:text-gray-900 mb-6">
      <span class="mr-2">‚Üê</span>
      Back to Dashboard
    </.link>

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Create Your AI Assistant
      </h1>
      <p class="text-gray-600">
        Follow these steps to personalize your assistant with your unique work style
      </p>
    </div>

    <!-- Step Navigation -->
    <div class="flex items-center justify-between mb-12">
      <%= for {step, idx} <- Enum.with_index([
        %{num: 1, label: "Work Products", sublabel: "Upload example documents"},
        %{num: 2, label: "Review Data", sublabel: "Add training examples"},
        %{num: 3, label: "Communications", sublabel: "Upload conversations"},
        %{num: 4, label: "References", sublabel: "Add knowledge base"},
        %{num: 5, label: "Training", sublabel: "Build your assistant"}
      ]) do %>
        <div class="flex items-center flex-1">
          <div class="flex flex-col items-center">
            <div class={"w-12 h-12 rounded-full flex items-center justify-center text-white font-semibold #{if step.num == @current_step, do: "bg-blue-600", else: "bg-gray-300"}"}>
              <%= step.num %>
            </div>
            <div class="mt-2 text-center">
              <div class="font-semibold text-sm text-gray-900">
                <%= step.label %>
              </div>
              <div class="text-xs text-gray-500"><%= step.sublabel %></div>
            </div>
          </div>
          <%= if idx < 4 do %>
            <div class="flex-1 h-0.5 bg-gray-300 mx-4 mt-[-40px]"></div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Main Content -->
    <div class="bg-white rounded-lg shadow-sm p-8">
      <%= cond do %>
        <% @current_step == 1 -> %>
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
              Upload Work Products
            </h2>
            <p class="text-gray-600">
              Upload examples of your work documents, reports, or any deliverables you typically create.
            </p>
          </div>
          
          <form phx-change="validate_upload" phx-submit="upload_files">
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center" phx-drop-target={@uploads.documents.ref}>
              <div class="text-5xl mb-4">üìÑ</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Drag and drop files here</h3>
              <p class="text-gray-600 mb-4">or click to browse</p>
              
              <label for={@uploads.documents.ref} class="cursor-pointer">
                <span class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 inline-block">
                  Choose Files
                </span>
              </label>
              <.live_file_input upload={@uploads.documents} class="hidden" />
              
              <p class="text-sm text-gray-500 mt-4">
                Supported formats: PDF, DOC, DOCX, TXT, CSV, JSON, XML, MD
              </p>
              <p class="text-xs text-gray-400 mt-1">
                Max file size: 50MB ‚Ä¢ Max files: 10
              </p>
            </div>

            <%!-- Show uploaded files --%>
            <%= if @uploads.documents.entries != [] do %>
              <div class="mt-6 space-y-3">
                <h4 class="font-semibold text-gray-900">Selected Files:</h4>
                <%= for entry <- @uploads.documents.entries do %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200">
                    <div class="flex items-center gap-3 flex-1">
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                      <div class="flex-1">
                        <p class="text-sm font-medium text-gray-900"><%= entry.client_name %></p>
                        <p class="text-xs text-gray-500"><%= Float.round(entry.client_size / 1024, 1) %> KB</p>
                      </div>
                    </div>
                    
                    <%!-- Progress bar --%>
                    <div class="flex items-center gap-3">
                      <%= if entry.progress > 0 && entry.progress < 100 do %>
                        <div class="w-32 bg-gray-200 rounded-full h-2">
                          <div class="bg-blue-600 h-2 rounded-full transition-all" style={"width: #{entry.progress}%"}></div>
                        </div>
                        <span class="text-xs text-gray-600"><%= entry.progress %>%</span>
                      <% end %>
                      
                      <button
                        type="button"
                        phx-click="cancel_upload"
                        phx-value-ref={entry.ref}
                        class="text-red-600 hover:text-red-700"
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </button>
                    </div>
                  </div>

                  <%!-- Show upload errors --%>
                  <%= for err <- upload_errors(@uploads.documents, entry) do %>
                    <p class="text-sm text-red-600 mt-1">
                      <%= error_to_string(err) %>
                    </p>
                  <% end %>
                <% end %>
              </div>
            <% end %>

            <%!-- Show any general upload errors --%>
            <%= for err <- upload_errors(@uploads.documents) do %>
              <p class="text-sm text-red-600 mt-2">
                <%= error_to_string(err) %>
              </p>
            <% end %>
          </form>

        <% @current_step == 2 -> %>
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
              Review Training Data
            </h2>
            <p class="text-gray-600">
              Add example prompts and their expected responses. This helps train your AI assistant to understand your preferences.
            </p>
          </div>

          <%= if @synthetic_samples == [] do %>
            <div class="text-center py-12">
              <div class="text-5xl mb-4">‚ú®</div>
              <p class="text-gray-600 mb-4">No training examples yet. Add some to get started!</p>
              <button
                phx-click="add_example"
                class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
              >
                Add Sample Examples
              </button>
            </div>
          <% else %>
            <!-- Column Headers -->
            <div class="grid grid-cols-12 gap-4 mb-4">
              <div class="col-span-4">
                <h3 class="font-semibold text-gray-900">Example Prompts</h3>
              </div>
              <div class="col-span-4">
                <h3 class="font-semibold text-gray-900">Example Reasoning Path</h3>
              </div>
              <div class="col-span-4">
                <h3 class="font-semibold text-gray-900">Example Final Product</h3>
              </div>
            </div>

            <!-- Example Rows -->
            <div class="space-y-4">
              <%= for {example, index} <- Enum.with_index(@synthetic_samples) do %>
          <div class="grid grid-cols-12 gap-4 p-4 border border-gray-200 rounded-lg">
            <!-- Prompt Column -->
            <div class="col-span-4">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-700">
                  Example <%= index + 1 %>
                </span>
              </div>
              <p class="text-sm text-gray-600">
                <%= example.prompt %>
              </p>
            </div>

            <!-- Reasoning Column -->
            <div class="col-span-4">
              <div class="mb-2">
                <span class="text-sm font-medium text-gray-700 invisible">
                  Placeholder
                </span>
              </div>
              <div class="bg-blue-50 p-3 rounded">
                <p class="text-sm text-gray-600">
                  <%= example.reasoning %>
                </p>
              </div>
            </div>

            <!-- Output Column -->
            <div class="col-span-4">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-700 invisible">
                  Placeholder
                </span>
                <div class="flex gap-2">
                  <button
                    phx-click="edit_example"
                    phx-value-id={example.id}
                    class="text-blue-600 hover:text-blue-700"
                    title="Edit"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </button>
                  <button
                    phx-click="delete_example"
                    phx-value-id={example.id}
                    class="text-red-600 hover:text-red-700"
                    title="Delete"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  </button>
                </div>
              </div>
              <div class="bg-green-50 p-3 rounded">
                <p class="text-sm text-gray-700">
                  <%= example.output %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
              </div>
            <% end %>

        <% @current_step == 3 -> %>
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
              Upload Communications
            </h2>
            <p class="text-gray-600">
              Upload example communication threads - emails, Slack conversations, SMS, or Discord messages.
            </p>
          </div>
          
          <form phx-change="validate_upload" phx-submit="upload_files">
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center" phx-drop-target={@uploads.documents.ref}>
              <div class="text-5xl mb-4">üí¨</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Upload Communication Examples</h3>
              <p class="text-gray-600 mb-4">Messages, emails, or chat transcripts</p>
              
              <label for={@uploads.documents.ref} class="cursor-pointer">
                <span class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 inline-block">
                  Choose Files
                </span>
              </label>
              <.live_file_input upload={@uploads.documents} class="hidden" />
            </div>

            <%= if @uploads.documents.entries != [] do %>
              <div class="mt-6 space-y-3">
                <h4 class="font-semibold text-gray-900">Selected Files:</h4>
                <%= for entry <- @uploads.documents.entries do %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200">
                    <div class="flex items-center gap-3 flex-1">
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                      </svg>
                      <p class="text-sm font-medium text-gray-900"><%= entry.client_name %></p>
                    </div>
                    <button type="button" phx-click="cancel_upload" phx-value-ref={entry.ref} class="text-red-600 hover:text-red-700">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </button>
                  </div>
                <% end %>
              </div>
            <% end %>
          </form>

        <% @current_step == 4 -> %>
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
              Add Reference Materials
            </h2>
            <p class="text-gray-600">
              Upload reference materials: manuals, procedures, research papers, templates, etc.
            </p>
          </div>
          
          <form phx-change="validate_upload" phx-submit="upload_files">
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center" phx-drop-target={@uploads.documents.ref}>
              <div class="text-5xl mb-4">üìö</div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Upload Reference Documents</h3>
              <p class="text-gray-600 mb-4">Knowledge base materials and documentation</p>
              
              <label for={@uploads.documents.ref} class="cursor-pointer">
                <span class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 inline-block">
                  Choose Files
                </span>
              </label>
              <.live_file_input upload={@uploads.documents} class="hidden" />
            </div>

            <%= if @uploads.documents.entries != [] do %>
              <div class="mt-6 space-y-3">
                <h4 class="font-semibold text-gray-900">Selected Files:</h4>
                <%= for entry <- @uploads.documents.entries do %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200">
                    <div class="flex items-center gap-3 flex-1">
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                      </svg>
                      <p class="text-sm font-medium text-gray-900"><%= entry.client_name %></p>
                    </div>
                    <button type="button" phx-click="cancel_upload" phx-value-ref={entry.ref} class="text-red-600 hover:text-red-700">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </button>
                  </div>
                <% end %>
              </div>
            <% end %>
          </form>

        <% @current_step == 5 -> %>
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
              Training Your Assistant
            </h2>
            <p class="text-gray-600">
              We're now training your AI assistant with all the data you've provided.
            </p>
          </div>
          
          <div class="py-12">
            <div class="text-center mb-8">
              <div class="text-6xl mb-4">ü§ñ</div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Training in Progress</h3>
              <p class="text-gray-600">This may take a few minutes...</p>
            </div>
            
            <div class="max-w-md mx-auto">
              <div class="space-y-3">
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-600">Stage I: Foundation Training</span>
                  <span class="text-green-600">‚úì</span>
                </div>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-600">Stage II: Social & Dialog</span>
                  <span class="text-blue-600">‚óè</span>
                </div>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-400">Stage III: Professional Context</span>
                  <span class="text-gray-300">‚óã</span>
                </div>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-400">Stage IV: Generic Instructions</span>
                  <span class="text-gray-300">‚óã</span>
                </div>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-400">Stage V: Personalization</span>
                  <span class="text-gray-300">‚óã</span>
                </div>
              </div>
            </div>
          </div>
      <% end %>

      <!-- Footer -->
      <div class="flex justify-between items-center mt-8 pt-6 border-t border-gray-200">
        <%= if @current_step > 1 do %>
          <button
            phx-click="back_step"
            class="px-6 py-2 text-gray-600 hover:text-gray-900"
          >
            Back
          </button>
        <% else %>
          <div></div>
        <% end %>
        
        <%= if @current_step < 5 do %>
          <button
            phx-click="next_step"
            class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
          >
            Continue
          </button>
        <% else %>
          <button
            phx-click="finish_training"
            class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
          >
            Complete Setup
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
