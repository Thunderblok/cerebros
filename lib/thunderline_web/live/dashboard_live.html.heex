<div class="min-h-screen bg-gradient-to-br from-[#3B1E5E] to-[#1F1F24] text-white">
  <div class="max-w-7xl mx-auto px-6 py-8">
    <%!-- Header with Cerebros Logo --%>
    <div class="flex items-center justify-between mb-12">
      <div class="flex items-center gap-4">
        <img src="/images/cerebros-logo.png" alt="Cerebros" class="h-16 w-auto" />
        <div>
          <h1 class="text-3xl font-bold">My AI Assistants</h1>
          <p class="text-gray-400">Manage and create custom AI assistants</p>
        </div>
      </div>
    </div>

    <%!-- Agents Grid --%>
    <%= if @agents == [] do %>
      <%!-- Empty State --%>
      <div class="flex flex-col items-center justify-center py-20">
        <div class="text-center mb-8">
          <div class="text-6xl mb-4">ğŸ¤–</div>
          <h2 class="text-2xl font-bold mb-2">No AI Assistants Yet</h2>
          <p class="text-gray-400 mb-8">Create your first custom AI assistant to get started</p>
        </div>
        <button
          phx-click="create_agent"
          class="px-8 py-4 bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-500 hover:to-purple-500 rounded-lg font-bold text-lg transition-all transform hover:scale-105"
        >
          Create Your First Assistant
        </button>
      </div>
    <% else %>
      <%!-- Create New Button --%>
      <div class="mb-6">
        <button
          phx-click="create_agent"
          class="px-6 py-3 bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-500 hover:to-purple-500 rounded-lg font-bold transition"
        >
          + Create New Assistant
        </button>
      </div>

      <%!-- Agents Grid --%>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <%= for agent <- @agents do %>
          <div
            phx-click="view_agent"
            phx-value-id={agent.id}
            class="bg-white/10 backdrop-blur-lg rounded-lg p-6 border border-white/20 hover:border-violet-400/50 cursor-pointer transition-all transform hover:scale-105"
          >
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-bold mb-2"><%= agent.name %></h3>
                <div class="flex items-center gap-2">
                  <%= case agent.status do %>
                    <% :ready -> %>
                      <span class="px-2 py-1 bg-green-600/30 text-green-300 rounded text-xs">Ready</span>
                    <% :processing -> %>
                      <span class="px-2 py-1 bg-yellow-600/30 text-yellow-300 rounded text-xs">Processing</span>
                    <% :draft -> %>
                      <span class="px-2 py-1 bg-gray-600/30 text-gray-300 rounded text-xs">Draft</span>
                    <% status when status in [:collecting_prompts, :collecting_references, :collecting_communications, :collecting_procedures] -> %>
                      <span class="px-2 py-1 bg-blue-600/30 text-blue-300 rounded text-xs">In Setup</span>
                  <% end %>
                </div>
              </div>
              <div class="text-4xl">ğŸ¤–</div>
            </div>

            <p class="text-gray-400 text-sm mb-4">
              Created <%= Calendar.strftime(agent.created_at, "%b %d, %Y") %>
            </p>

            <div class="flex justify-end">
              <span class="text-violet-400 text-sm font-semibold">View Details â†’</span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
