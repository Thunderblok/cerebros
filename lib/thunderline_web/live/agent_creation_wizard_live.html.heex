<div class="w-full min-h-screen bg-gray-50 p-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <.link navigate="/dashboard" class="flex items-center text-gray-600 hover:text-gray-900 mb-6">
      <span class="mr-2">‚Üê</span>
      Back to Dashboard
    </.link>

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Create Your AI Assistant
      </h1>
      <p class="text-gray-600">
        Follow these steps to personalize your assistant with your unique work style
      </p>
    </div>

    <!-- Step Navigation -->
    <div class="flex items-center justify-between mb-12">
      <%= for {step, idx} <- Enum.with_index([
        %{num: 1, label: "Work Products", sublabel: "Upload example documents"},
        %{num: 2, label: "Review Data", sublabel: "Add training examples"},
        %{num: 3, label: "Communications", sublabel: "Upload conversations"},
        %{num: 4, label: "References", sublabel: "Add knowledge base"},
        %{num: 5, label: "Training", sublabel: "Build your assistant"}
      ]) do %>
        <div class="flex items-center flex-1">
          <div class="flex flex-col items-center">
            <div class={"w-12 h-12 rounded-full flex items-center justify-center text-white font-semibold #{if step.num == @current_step, do: "bg-blue-600", else: "bg-gray-300"}"}>
              <%= step.num %>
            </div>
            <div class="mt-2 text-center">
              <div class="font-semibold text-sm text-gray-900">
                <%= step.label %>
              </div>
              <div class="text-xs text-gray-500"><%= step.sublabel %></div>
            </div>
          </div>
          <%= if idx < 4 do %>
            <div class="flex-1 h-0.5 bg-gray-300 mx-4 mt-[-40px]"></div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Main Content -->
    <div class="bg-white rounded-lg shadow-sm p-8">
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">
          Review Data
        </h2>
        <p class="text-gray-600">
          Add example prompts and their expected responses. This helps train your AI assistant to understand your preferences.
        </p>
      </div>

      <!-- Column Headers -->
      <div class="grid grid-cols-12 gap-4 mb-4">
        <div class="col-span-4">
          <h3 class="font-semibold text-gray-900">Example Prompts</h3>
        </div>
        <div class="col-span-4">
          <h3 class="font-semibold text-gray-900">Example Reasoning Path</h3>
        </div>
        <div class="col-span-4">
          <h3 class="font-semibold text-gray-900">Example Final Product</h3>
        </div>
      </div>

      <!-- Example Rows -->
      <div class="space-y-4">
        <%= for {example, index} <- Enum.with_index(@synthetic_samples) do %>
          <div class="grid grid-cols-12 gap-4 p-4 border border-gray-200 rounded-lg">
            <!-- Prompt Column -->
            <div class="col-span-4">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-700">
                  Example <%= index + 1 %>
                </span>
              </div>
              <p class="text-sm text-gray-600">
                <%= example.prompt %>
              </p>
            </div>

            <!-- Reasoning Column -->
            <div class="col-span-4">
              <div class="mb-2">
                <span class="text-sm font-medium text-gray-700 invisible">
                  Placeholder
                </span>
              </div>
              <div class="bg-blue-50 p-3 rounded">
                <p class="text-sm text-gray-600">
                  <%= example.reasoning %>
                </p>
              </div>
            </div>

            <!-- Output Column -->
            <div class="col-span-4">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-700 invisible">
                  Placeholder
                </span>
                <div class="flex gap-2">
                  <button
                    phx-click="edit_example"
                    phx-value-id={example.id}
                    class="text-blue-600 hover:text-blue-700"
                    title="Edit"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </button>
                  <button
                    phx-click="delete_example"
                    phx-value-id={example.id}
                    class="text-red-600 hover:text-red-700"
                    title="Delete"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  </button>
                </div>
              </div>
              <div class="bg-green-50 p-3 rounded">
                <p class="text-sm text-gray-700">
                  <%= example.output %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Footer -->
      <div class="flex justify-between items-center mt-8 pt-6 border-t border-gray-200">
        <button
          phx-click="back_step"
          class="px-6 py-2 text-gray-600 hover:text-gray-900"
        >
          Back
        </button>
        <button
          phx-click="next_step"
          class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
        >
          Continue
        </button>
      </div>
    </div>
  </div>
</div>
