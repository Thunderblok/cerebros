<div class="min-h-screen bg-white">
  <div class="max-w-7xl mx-auto px-6 py-8">
    <%!-- Header with Cerebros Logo --%>
    <div class="flex items-center justify-between mb-12 pb-6 border-b border-gray-200">
      <div class="flex items-center gap-6">
        <img src="/images/cerebros-logo-new.svg" alt="Cerebros - One World, One Family, One Algorithm" class="h-20 w-auto" />
      </div>
      
      <div class="flex items-center gap-4">
        <%!-- Enterprise Features --%>
        <button class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition" title="Notifications">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </button>
        
        <button class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition" title="Settings">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </button>
        
        <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold">
            MO
          </div>
        </div>
      </div>
    </div>

    <%!-- Stats Overview --%>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-gray-600 text-sm font-medium">Total Assistants</h3>
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <p class="text-3xl font-bold text-gray-900">0</p>
        <p class="text-xs text-gray-500 mt-1">No assistants created yet</p>
      </div>
      
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-gray-600 text-sm font-medium">API Calls</h3>
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        </div>
        <p class="text-3xl font-bold text-gray-900">0</p>
        <p class="text-xs text-green-600 mt-1">+0% from last month</p>
      </div>
      
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-gray-600 text-sm font-medium">Avg Response Time</h3>
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <p class="text-3xl font-bold text-gray-900">--</p>
        <p class="text-xs text-gray-500 mt-1">No data available</p>
      </div>
      
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-gray-600 text-sm font-medium">Success Rate</h3>
          <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <p class="text-3xl font-bold text-gray-900">--%</p>
        <p class="text-xs text-gray-500 mt-1">No data available</p>
      </div>
    </div>

    <%!-- Main Content Area --%>
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">My AI Assistants</h1>
        <p class="text-gray-600 text-sm mt-1">Manage and deploy your custom AI assistants</p>
      </div>
      
      <%= if @agents != [] do %>
        <div class="flex items-center gap-3">
          <div class="relative">
            <input type="text" placeholder="Search assistants..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            <svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          
          <button class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
            Filter
          </button>
        </div>
      <% end %>
    </div>

    <%!-- Agents Grid --%>
    <%= if @agents == [] do %>
      <%!-- Empty State --%>
      <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl p-16 text-center border border-blue-100">
        <div class="max-w-md mx-auto">
          <div class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-3">Build Your First AI Assistant</h2>
          <p class="text-gray-600 mb-8">Create a custom AI assistant trained on your unique data, style, and expertise. Get started in minutes.</p>
          
          <button
            phx-click="create_agent"
            class="px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-lg font-semibold text-lg shadow-lg hover:shadow-xl transition-all transform hover:scale-105 inline-flex items-center gap-2"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create Your First Assistant
          </button>
          
          <div class="mt-8 pt-8 border-t border-blue-200">
            <p class="text-sm text-gray-600 mb-4">Why create an AI assistant?</p>
            <div class="grid grid-cols-3 gap-4 text-left">
              <div>
                <div class="text-blue-600 font-semibold text-sm mb-1">⚡ Fast Setup</div>
                <div class="text-xs text-gray-600">Ready in 5 minutes</div>
              </div>
              <div>
                <div class="text-purple-600 font-semibold text-sm mb-1">🎯 Your Style</div>
                <div class="text-xs text-gray-600">Trained on your data</div>
              </div>
              <div>
                <div class="text-emerald-600 font-semibold text-sm mb-1">🔒 Secure</div>
                <div class="text-xs text-gray-600">Enterprise-grade</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <%!-- Create New Button --%>
      <div class="mb-6">
        <button
          phx-click="create_agent"
          class="px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-lg font-semibold transition shadow-md hover:shadow-lg inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create New Assistant
        </button>
      </div>

      <%!-- Agents Grid --%>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <%= for agent <- @agents do %>
          <div
            phx-click="view_agent"
            phx-value-id={agent.id}
            class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg hover:border-blue-300 cursor-pointer transition-all"
          >
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-2"><%= agent.name %></h3>
                <div class="flex items-center gap-2">
                  <%= case agent.status do %>
                    <% :ready -> %>
                      <span class="px-2 py-1 bg-green-100 text-green-700 rounded text-xs font-medium">Ready</span>
                    <% :processing -> %>
                      <span class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded text-xs font-medium">Processing</span>
                    <% :draft -> %>
                      <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-xs font-medium">Draft</span>
                    <% status when status in [:collecting_prompts, :collecting_references, :collecting_communications, :collecting_procedures] -> %>
                      <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded text-xs font-medium">In Setup</span>
                  <% end %>
                </div>
              </div>
              <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
            </div>

            <p class="text-gray-600 text-sm mb-4">
              Created <%= Calendar.strftime(agent.created_at, "%b %d, %Y") %>
            </p>

            <div class="flex justify-between items-center pt-4 border-t border-gray-100">
              <span class="text-blue-600 text-sm font-semibold hover:text-blue-700">View Details →</span>
              <div class="flex gap-1">
                <button class="p-1 text-gray-400 hover:text-gray-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                </button>
                <button class="p-1 text-gray-400 hover:text-red-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
